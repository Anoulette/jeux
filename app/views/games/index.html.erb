<h2>Liste de tous les jeux</h2>
<%# je veux afficher tous les jeux %>
<%# quand je clique sur un jeu, ça me renvoie vers la page/show du jeu %>

<% @games.each do |game| %>
  <ul>
    <li><%= link_to game.title, game_path(game) %></li>
    <li><%= game.price_per_day %> €</li>
  </ul>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Créer un nouveau jeu", new_game_path %>
<% end %>
